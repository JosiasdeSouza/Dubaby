<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dubaby"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <!-- MainActivity -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CategoriesActivity -->
        <activity android:name=".CategoriesActivity"
            android:exported="true" />

        <!-- ProductsActivity -->
        <activity android:name=".ProductsActivity"
            android:exported="true" />

        <activity android:name=".UserCategories"
             android:exported="true"/>
        <activity android:name=".BuyActivity"
            android:exported="true"/>
        <activity android:name=".SellActivity"
            android:exported="true"/>
        <activity android:name=".RentActivity"
            android:exported="true"/>
        <activity android:name=".DonateActivity"
            android:exported="true"/>

    </application>

</manifest>
